<div class = "container">
  <div class = "row mt-5">
    <h5>新規登録</h5>
    <div class = "col offset-1 form-group">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <div class="field pb-3">
        <%= f.label :name, '名前' %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="field pb-3">
        <%= f.label :nickname, 'ニックネーム' %><br>
        <%= f.text_field :nickname, class: 'form-control'  %>
      </div>

      <div class="field pb-3">
        <%= f.label :email, 'メールアドレス'  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', size: '1×1' %>
      </div>

      <div class="field pb-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <a>（<%= @minimum_password_length %>文字以上）</a>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'  %>
      </div>

      <div class="field pb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'  %>
      </div>

      <div class="mt-2 text-end">
        <%= f.submit "新規登録", class: 'btn btn-danger'%>
      </div>
    <% end %>
    </div>
  </div>
</div>
