<p>味ごとののランキングはこちらから↓</p>
<%= link_to '酸味のランキング', user_ranks_sourness_ranks_path, class: 'text-dark' %>
<%= link_to '甘味のランキング', user_ranks_sweetness_ranks_path, class: 'text-dark' %>
<%= link_to '苦味のランキング', user_ranks_bitterness_ranks_path, class: 'text-dark' %>

<h3>総合評価</h3>
<% @ranks.each.with_index(1) do |item, i|%>
  <h5>第<%= i %>位</h5>
      <ul>
        <li　class="list-unstyled">商品名：
        <%= link_to user_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
        </li>
        <li　class="list-unstyled">メーカー：<%= item.maker %></li>
        <li　class="list-unstyled">発売日：<%= item.release_date %></li>
        <div id="star-average<%= item.id %>">総合評価平均：<%= item.reviews.average(:star) %>点
          <script>
            $('#star-average<%= item.id %>').raty({
                size      : 20,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf  : '<%= asset_path('star-half.png') %>',
                half      : true,
                readOnly  : true,
                score: <%= item.reviews.average(:star) %>,
              });
          </script>
        </div>
      </ul>
<% end %>

