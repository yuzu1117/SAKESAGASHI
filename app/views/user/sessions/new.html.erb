<div class = "container">
  <div class = "row mt-5">

    <div class = "col offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form_control pb-3">
        <%= f.text_field :name , placeholder: "名前"%>
      </div>

      <div class="field  pb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "メールアドレス"%>
      </div>

      <div class="field  pb-3">
        <%= f.password_field :password, autocomplete: "current-password" , placeholder: "パスワード"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions pb-5">
        <%= f.submit "ログイン", class: 'btn btn-outline-warning' %>
      </div>
    <% end %>


      <p>新規登録は<%= link_to 'こちらから', new_user_registration_path, class: "text-dark" %></p>

      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary", method: :post %>
    </div>
  </div>
</div>
