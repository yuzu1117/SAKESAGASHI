<div class = 'container'>
<label><h5>コメント一覧</h5></label>
 <div class = 'row'>
  <table class = 'table text-center'>
    <thead class = 'table-primary'>
      <tr>
        <th>ユーザー</th>
        <th>投稿日時</th>
        <th>商品</th>
        <th width = '40%'>コメント</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @review_comments.each do |review_comment|%>
      <tr>
        <td>
         <%= link_to admin_user_path(review_comment.user.id) do%>
           <%= review_comment.user.name %>
          <% end %>
        </td>
        <td><%= review_comment.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= review_comment.review.item.name %></td>
        <td><%= review_comment.comment %></td>
        <td><%= link_to '削除', admin_review_comment_path(review_comment.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-outline-danger' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
 </div>
</div>