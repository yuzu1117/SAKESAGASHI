<div class="container">
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <div class="row g-3">
    <div class ="col-md-7 offset-md-3">
      <table class="table text-left table-borderless">
        <tbody>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_field :maker %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), inclide_blank: '選択してください' %></td>
          </tr>
          <tr>
            <th>発売日</th>
            <td><%= f.text_field :release_date %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class = "row g-3">
    <div class ="col-md-9 offset-md-5">
    <%= f.submit '変更する', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>

