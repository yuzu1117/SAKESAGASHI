<div class='container'>
 <div class = 'row'>
  <div class ='col-11'>
    <label><h5>お酒一覧</h5></label>
  </div>
  <div class = 'col-1'>
    <%= link_to '追加', new_admin_item_path, class: 'btn btn-primary' %>
  </div>
 </div>

  <div class='row'>
    <div class='col'>
      <table class="table text-center">
         <thead class="table-primary">
           <tr>
             <th scope="col">商品画像</th>
             <th scope="col">商品名</th>
             <th scope="col">メーカー</th>
             <th scope="col">ジャンル</th>
             <th scope="col"></th>
            </tr>
          </thead>

          <tbody>
           <% @items.each do |item| %>
           <tr>
             <td>
              <% if item.image.attached? %>
               <%= image_tag item.image, size: "100x100" %>
              <% else %>
               <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
             </td>
             <td class = 'align-middle'>
               <%= item.name %>
             </td>
             <td class = 'align-middle'>
              <%= item.maker %>
             </td>
             <td class = 'align-middle'>
              <%= item.genre.name %>
             </td>
             <td class = 'align-middle'>
               <%= link_to '編集する', edit_admin_item_path(item.id), class: 'btn btn-outline-primary btn-sm' %>
               <%= link_to '削除する', admin_item_path(item.id), method: :delete, deta: { confirm: 'この商品を削除しますか？' }, class: 'btn btn-outline-danger btn-sm'%>
             </td>
           </tr>
           <% end %>
         </tbody>
        </table>
      </div>
    </div>

  </div>