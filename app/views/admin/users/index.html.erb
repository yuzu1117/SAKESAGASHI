<div class="h3 pb-2 mb-4 text-success border-bottom border-success">
  会員一覧
</div>
<div class='container'>
  <div class='row g-3'>
    <div class='col-md-8 offset-md-2'>
      <table class="table">
        <thead class="table-success">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= user.id %></th>
              <td><%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
              <% end %>
              </td>
              <td><%= user.email %></td>
              <td><% if user.is_deleted == false %>
                    有効
                  <% else %>
                    退会
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
