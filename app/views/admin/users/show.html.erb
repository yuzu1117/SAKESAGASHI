<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-2'>
      <table class="table table-bordered ">
        <tbody>
            <tr>
              <td class="table-primary border-light" width= '40%'>会員ID</td>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <td class="table-primary border-light" width= '40%'>氏名</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td class="table-primary border-light" width= '40%'>ニックネーム</td>
              <td><%= @user.nickname %></td>
            </tr>
            <tr>
              <td class="table-primary border-light" width= '40%'>メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td class="table-primary border-light" width= '40%'>会員ステータス</td>
              <td><% if @user.is_deleted==false %>
                  有効
                  <% else %>
                  退会
                  <% end %>
              </td>
            </tr>
        </tbody>
      </table>

      <div>
        <%= render 'admin/users/edit' %>
      </div>
    </div>
  </div>
</div>